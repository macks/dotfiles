escape ^]^]
startup_message off
vbell off
defscrollback 3000
defencoding utf-8
hardstatus alwayslastline "%-Lw%{= bw}%50>%n%f* %t%{-}%+Lw%<"
termcapinfo screen|xterm*|rxvt*|kterm*|Eterm* XT
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
cjkwidth on

bind R resize
bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

defbce on
term screen-256color
