# vim: set ft=sh:

# path
for i in ~/bin; do
  test -d "$i" || continue
  if ! echo ":$PATH:" | fgrep -q ":$i:"; then
    PATH="$i:$PATH"
  fi
done

# mail address
if test "$USER" = macks; then
  EMAIL=macksx@gmail.com
else
  EMAIL=k-matsuyama@bns-g.com
fi
export EMAIL

# set environment variables
export LANG=ja_JP.UTF-8
export LC_CTYPE=ja_JP.UTF-8
export LC_TIME=C
export LC_MESSAGES=C

# for X
test -n "$DISPLAY" && LC_MESSAGES=ja_JP.UTF-8

export COLUMNS LINES

which vim >/dev/null && export EDITOR=vim
which lv  >/dev/null && export PAGER=lv
