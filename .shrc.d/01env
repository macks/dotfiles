# vim: set ft=sh:

# path
for i in ~/bin; do
  test -d "$i" && PATH="$i:$PATH"
done

# mail address (rot13)
if test "$USER" = macks; then
  EMAIL=znpxfk@tznvy.pbz
else
  EMAIL=x-zngfhlnzn@oaf-t.pbz
fi
EMAIL=$(echo $EMAIL | tr a-z n-za-m)
export EMAIL

# set environment variables
export LANG=ja_JP.UTF-8
export LC_CTYPE=ja_JP.UTF-8
export LC_TIME=C
export LC_MESSAGES=C

# for X
test -n "$DISPLAY" && LC_MESSAGES=ja_JP.UTF-8

export COLUMNS LINES

which vim >/dev/null && export EDITOR=vim
which lv  >/dev/null && export PAGER=lv
