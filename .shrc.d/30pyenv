# vim: set ft=sh:

# pyenv
if which pyenv >/dev/null; then
  eval "$(pyenv init -)"
elif test -n "$PYENV_ROOT"; then
  PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init -)"
else
  for i in ~/.pyenv /usr/local/pyenv; do
    if test -x "$i/bin/pyenv"; then
      export PYENV_ROOT="$i"
      PATH="$PYENV_ROOT/bin:$PATH"
      eval "$(pyenv init -)"
      break
    fi
  done
fi
