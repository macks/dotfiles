# vim: set ft=zsh:

# aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias vi=vim
alias dirs='dirs -v'
alias grep='grep --color=auto --exclude-dir=.svn --exclude-dir=.git --exclude=".*.swp"'
alias bx='bundle exec'

eval `dircolors -b`
alias ls='ls --color=auto'

if which colordiff >/dev/null 2>&1; then
  diff () {
    if test -t 1; then
      command colordiff "$@"
    else
      command diff "$@"
    fi
  }
fi
